{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Video Compressor",
  "version": "0.1.0",
  "identifier": "com.edicl.video-compressor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Video Compressor",
        "width": 1280,
        "height": 768,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../ffmpeg/bin/ffmpeg.exe",
      "../../ffmpeg/bin/ffprobe.exe",
      "../../ffmpeg/bin/*.dll",
      "../../ffmpeg/bin/model"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": [
          "zh-CN",
          "en-US"
        ]
      },
      "nsis": {
        "languages": [
          "SimpChinese",
          "English"
        ],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "headerImage": null,
        "sidebarImage": null
      }
    },
    "publisher": "Edicl",
    "copyright": "Copyright Â© 2026",
    "category": "Utility",
    "shortDescription": "Video compression tool with FFmpeg",
    "longDescription": "A powerful video compression tool with built-in FFmpeg support for various encoding formats and quality settings."
  }
}